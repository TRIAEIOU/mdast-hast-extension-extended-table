{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ES2020",
    "outDir": "bin",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "checkJs": true,
    "allowJs": true,
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "lib": [
      "ES2020"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowUnreachableCode": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src.orig/**/*.ts",
    "src.orig/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "<node_internals>/**",
    "**/Archive/**/*"
  ],
  "ts-node": {
    "esm": true
  }
}
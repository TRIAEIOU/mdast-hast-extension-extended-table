{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ES2020",
    "rootDir": "src",
    "outDir": ".",
    "declaration": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "checkJs": true,
    "allowJs": true,
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "lib": [
      "ES2020"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowUnreachableCode": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "<node_internals>/**",
    "**/.archive",
    "src/demo.ts"
  ],
  "ts-node": {
    "esm": true
  }
}